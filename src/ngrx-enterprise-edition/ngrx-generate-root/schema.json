{
    "$schema": "http://json-schema.org/schema",
    "id": "NGRXEnterpriseEdition",
    "title": "ngrx enterprise edition",
    "type": "object",
    "properties": {
        "dirName": {
            "type": "string",
            "description": "The name of the directory you want to generate the root store module"
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the component.",
            "visible": false
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        },
        "module": {
            "type": "string",
            "description": "The declaring module.",
            "alias": "m"
        }
    }
}